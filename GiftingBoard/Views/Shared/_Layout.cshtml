                    g = 3;
                }
                else if (uri == "/Dashboard/ListBoard")
                {
                    g = 4;
                }
                else if (uri == "/Dashboard/UserDatabase")
                {
                    g = 5;
                }
                else if (uri == "/Dashboard/MyProfile")
                {
                    g = 6;
                }
                else if (uri == "/Dashboard/Chat")
