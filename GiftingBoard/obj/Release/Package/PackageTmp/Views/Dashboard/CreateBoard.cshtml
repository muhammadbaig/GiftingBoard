
@{
    ViewBag.Title = "Create Board";
}

<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card ">
                    <div class="card-header card-header-info card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">mail_outline</i>
                        </div>
                        <h4 class="card-title">Create Board</h4>
                    </div>
                    <form method="#" action="#">

                        <div class="card-body ">

                            <div class="col-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="exampleEmail" class="bmd-label-floating">Board Name</label>
                                            <input type="text" class="form-control" id="exampleEmail">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="examplePass" class="bmd-label-floating">Original Core Member Name</label>
                                            <input type="text" class="form-control" id="examplePass">
                                        </div>
                                    </div>
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="examplePass1" class="bmd-label-floating">Total Board Members</label>
                                            <input type="text" class="form-control" id="examplePass1">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="examplePass2" class="bmd-label-floating">Board Type</label>
                                            <input type="text" class="form-control" id="examplePass2">
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <div class="card-footer">
                            <div class="col-12 text-right">
                                <button type="submit" class="btn btn-info"><i class="fa fa-save mr-2"></i> Save</button>
                            </div>

                        </div>
                     </form>
                </div>
            </div>
        </div>
    </div>
</div>

